<div class="col-sm-8">
  <div class="card">
    <%= form_for(@order, url: create_order_path, method: :post) do |f| %>
        <div class="card-block">
          <% if @order.errors.any? %>
              <div id="error_explanation" class="alert alert-danger">
                <h2><%= pluralize(@order.errors.count, "error") %> prohibited this article from being saved:</h2>
                <ul>
                  <% @order.errors.full_messages.each do |message| %>
                      <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
          <% end %>
          
          <fieldset class="form-group">
            <%= f.label :name %><br>
            <%= f.text_field :name %>
          </fieldset>
          <fieldset class="form-group">
            <%= f.label :phone %><br>
            <%= f.text_field :phone %>
          </fieldset>
          <fieldset class="form-group">
            <%= f.label :address %><br>
            <%= f.text_area :address %>
          </fieldset>
          <fieldset class="form-group">
            <%= f.label :food_item_id %><br>
            <%= f.text_field :food_item_id, readonly: true %>
          </fieldset>
        </div>
        <div class="card-footer">
          <%= f.submit 'Submit', class: 'btn btn-primary' %>
        </div>
    <% end %>
  </div>
</div>
