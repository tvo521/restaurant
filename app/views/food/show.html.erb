<div class="col-md-8">
  <div>
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3>
          <%= @food_item.name %>
          <span class="badge pull-right"><%= @food_item.price %> VND</span>
        </h3>
      </div>
      <div class="panel-content">
        <br/>
        <img src="<%= @food_item.image_url %>" class="img-responsive"/>
        <br/>
      </div>
      <div class="panel-footer text-center">
        <p><%= @food_item.description %></p>
        <%= link_to 'Order', new_order_food_item_path(@food_item.id), class: 'btn btn-primary' %>
      </div>
    </div>
  </div>
</div>
